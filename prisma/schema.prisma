// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String         @id @default(cuid())
  email               String         @unique
  passwordHash        String
  name                String?
  birthDate           DateTime?
  role                Role           @default(CREATOR)
  accountStatus       AccountStatus  @default(ACTIVE)
  scheduledDeletionAt DateTime?
  store               CreatorStore?
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
}

model CreatorStore {
  id                    String          @id @default(cuid())
  userId                String          @unique
  handle                String          @unique
  displayName           String?
  location              String?
  bio                   String?         @db.Text
  avatarUrl             String?
  bannerUrl             String?
  theme                 Theme           @default(DARK)
  categories            String[]
  social                Json?
  showSocialLinks       Boolean         @default(true)
  customLinks           Json?
  isPublished           Boolean         @default(false)
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  collabRequests  CollabRequest[]
}

model CollabRequest {
  id          String              @id @default(cuid())
  creatorId   String
  senderName  String
  brandName   String?
  senderEmail String
  budget      Decimal?            @db.Decimal(10, 2)
  description String?             @db.Text
  links       String[]
  status      CollabRequestStatus @default(PENDING)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  creator CreatorStore @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@index([creatorId])
  @@index([status])
}

enum Role {
  CREATOR
  ADMIN
}

enum Theme {
  LIGHT
  DARK
}

enum AccountStatus {
  ACTIVE
  PAUSED
  PENDING_DELETION
  DELETED
}

enum CollabRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  ARCHIVED
}

